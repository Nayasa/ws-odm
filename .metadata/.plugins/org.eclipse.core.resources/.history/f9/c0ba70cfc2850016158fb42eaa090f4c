		<complexType name="PilotCal">
			<xs:sequence>
				<xs:element name="FirstName" type="string"/>
				<xs:element name="LastName" type="string"/>
				<xs:element name="EmpNumber" type="string"/>
				<xs:element name="IsPilotLineholder" type="boolean"/>
				<xs:element name="MPGHrs" type="double"/>
